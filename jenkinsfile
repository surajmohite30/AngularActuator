node{
    stage('Checkout SCM'){
        git branch: 'master', url: 'https://github.com/surajmohite30/AngularActuator.git'
    }

    stage('Install node module'){
        bat "npm install"
    }

    stage('Build'){
        bat "ng build --base-href=/highChartsDemo/"
    }

    stage('Deploy'){
        bat "robocopy C:/Users/LENOVO/.jenkins/workspace/jenkins_angular_pipe/dist D:/tomcat/webapps /E /MOVE"
    }

    stage('run'){
       bat "start chrome http://localhost:8081/highChartsDemo"
    }
}